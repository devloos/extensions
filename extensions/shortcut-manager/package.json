{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shortcut-manager",
  "title": "Shortcut Manager",
  "description": "Manages any shortcut",
  "icon": "extension/shortcut-manager.png",
  "author": "devlos",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "List Shortcuts",
      "description": "List of shortcuts filtered by application",
      "mode": "view"
    },
    {
      "name": "new-shortcut",
      "title": "Create New Shortcut",
      "description": "Create a new shortcut for any of your applications",
      "mode": "view"
    },
    {
      "name": "new-app",
      "title": "Create New Application",
      "description": "Create a new application for all of your shortcuts",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "adobe-photoshop",
      "description": "Enable Adobe Photoshop",
      "type": "checkbox",
      "label": "Adobe Photoshop",
      "required": true
    },
    {
      "name": "adobe-premiere-pro",
      "description": "Enable Adobe Premiere Pro",
      "type": "checkbox",
      "label": "Adobe Premiere Pro",
      "required": true
    },
    {
      "name": "chrome",
      "description": "Enable Chrome",
      "type": "checkbox",
      "label": "Chrome",
      "required": true
    },
    {
      "name": "discord",
      "description": "Enable Discord",
      "type": "checkbox",
      "label": "Discord",
      "required": true
    },
    {
      "name": "final-cut-pro",
      "description": "Enable Final Cut Pro",
      "type": "checkbox",
      "label": "Final Cut Pro",
      "required": true
    },
    {
      "name": "firefox",
      "description": "Enable Firefox",
      "type": "checkbox",
      "label": "Firefox",
      "required": true
    },
    {
      "name": "neovim",
      "description": "Enable Discord",
      "type": "checkbox",
      "label": "Neovim",
      "required": true
    },
    {
      "name": "sublime-text",
      "description": "Enable Sublime Text",
      "type": "checkbox",
      "label": "Sublime Text",
      "required": true
    },
    {
      "name": "tmux",
      "description": "Enable tmux",
      "type": "checkbox",
      "label": "tmux",
      "required": true
    },
    {
      "name": "vscode",
      "description": "Enable VSCode",
      "type": "checkbox",
      "label": "VSCode",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
